{
  "name": "@kortexa-ai/react-shadertoy",
  "version": "0.1.0",
  "description": "React component for Shadertoy shaders",
  "copyright": "Copyright Â© 2025 kortexa.ai",
  "author": {
    "name": "Franci Penov",
    "email": "francip@kortexa.ai",
    "url": "https://kortexa.ai"
  },
  "keywords": [
    "shadertoy",
    "react",
    "react-native",
    "webgl"
  ],
  "license": "MIT",
  "private": false,
  "homepage": "https://kortexa-ai.github.io/react-shadertoy/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kortexa-ai/react-shadertoy.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CONTRIBUTING.md",
    "CHANGELOG.md"
  ],
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./native": {
      "import": "./dist/native.js",
      "require": "./dist/native.js",
      "types": "./dist/native.d.ts"
    }
  },
  "scripts": {
    "clean": "rm -rf dist dev-dist build coverage data",
    "lint": "eslint . --report-unused-disable-directives --no-error-on-unmatched-pattern",
    "lint:fix": "npm run lint -- --fix",
    "typecheck": "tsc -p tsconfig.app.json --noEmit",
    "build": "tsc -p tsconfig.app.json && tsc-alias -p tsconfig.app.json",
    "validate": "npm run typecheck && npm run lint && npm run test",
    "coverage": "vitest run --coverage",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "test:ci": "vitest run --coverage --reporter=json --outputFile=build/test-results.json",
    "prepublishOnly": "npm run validate && npm run build"
  },
  "peerDependencies": {
    "@react-three/drei": "^10.0.0",
    "@react-three/fiber": "^9.0.0",
    "expo-gl": "^15.0.0",
    "r3f-native-orbitcontrols": "^1.0.12",
    "react-native": "^0.78.0",
    "react-native-web": "^0.19.13",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "three": "^0.166.0"
  },
  "devDependencies": {
    "@react-three/drei": "^10.0.0",
    "@react-three/fiber": "^9.0.0",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/semver": "^7.5.8",
    "@types/three": "^0.175.0",
    "@vitejs/plugin-react-swc": "^3.8.1",
    "@vitest/coverage-v8": "^3.0.8",
    "ajv": "^8.17.1",
    "dotenv": "^16.4.7",
    "eslint": "^9.22.0",
    "eslint-import-resolver-typescript": "^4.3.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "fs": "^0.0.1-security",
    "globals": "^16.0.0",
    "jiti": "^2.4.2",
    "jsdom": "^26.0.0",
    "nodemon": "^3.1.9",
    "npm-check-updates": "^17.1.15",
    "path": "^0.12.7",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "three": "^0.175.0",
    "tsc-alias": "^1.8.11",
    "tsx": "^4.19.3",
    "typescript": "~5.8.2",
    "typescript-eslint": "^8.26.1",
    "vite": "^6.2.1",
    "vite-plugin-dts": "^4.5.3",
    "vite-plugin-glsl": "^1.3.3",
    "vitest": "^3.0.8"
  },
  "engines": {
    "node": ">=18"
  }
}
