{
    "name": "@kortexa-ai/react-shadertoy",
    "version": "0.1.1",
    "description": "React component for Shadertoy shaders",
    "copyright": "Copyright Â© 2025 kortexa.ai",
    "author": {
        "name": "Franci Penov",
        "email": "francip@kortexa.ai",
        "url": "https://kortexa.ai"
    },
    "keywords": [
        "shaders",
        "shadertoy",
        "threejs",
        "react",
        "react-native",
        "webgl"
    ],
    "license": "MIT",
    "private": false,
    "homepage": "https://github.com/kortexa-ai/react-shadertoy",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/kortexa-ai/react-shadertoy.git"
    },
    "publishConfig": {
        "registry": "https://registry.npmjs.org/"
    },
    "files": [
        "dist",
        "README.md",
        "LICENSE",
        "CONTRIBUTING.md",
        "CHANGELOG.md"
    ],
    "main": "./dist/index.js",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.js"
        },
        "./native": {
            "types": "./dist/native.d.ts",
            "import": "./dist/native.js",
            "require": "./dist/native.js"
        }
    },
    "scripts": {
        "clean": "rm -rf dist dev-dist lib build coverage data src/data server/data",
        "lint": "eslint . --report-unused-disable-directives --no-error-on-unmatched-pattern",
        "lint:fix": "npm run lint -- --fix",
        "typecheck": "tsc -p tsconfig.app.json --noEmit",
        "build": "tsc -p tsconfig.app.json && tsc-alias -p tsconfig.app.json",
        "validate": "npm run typecheck && npm run lint && npm run test",
        "coverage": "vitest run --coverage",
        "test": "vitest run --passWithNoTests",
        "test:watch": "vitest",
        "test:ci": "vitest run --coverage --reporter=json --outputFile=build/test-results.json",
        "prepublishOnly": "npm run validate && npm run build"
    },
    "peerDependencies": {
        "@react-three/drei": "^10.0.0",
        "@react-three/fiber": "^9.0.0",
        "expo-gl": "^15.0.0",
        "r3f-native-orbitcontrols": "^1.0.12",
        "react": "^18.0.0 || ^19.0.0",
        "react-dom": "^18.0.0 || ^19.0.0",
        "react-native": "^0.79.0",
        "react-native-web": "^0.19.13",
        "three": "^0.175.0"
    },
    "devDependencies": {
        "@react-three/drei": "^10.0.6",
        "@react-three/fiber": "^9.1.2",
        "@types/node": "^22.14.0",
        "@types/react": "^19.1.0",
        "@types/react-dom": "^19.1.2",
        "@types/semver": "^7.7.0",
        "@types/three": "^0.175.0",
        "@vitejs/plugin-react-swc": "^3.8.1",
        "@vitest/coverage-v8": "^3.1.1",
        "ajv": "^8.17.1",
        "dotenv": "^16.5.0",
        "eslint": "^9.24.0",
        "eslint-import-resolver-typescript": "^4.3.2",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.19",
        "fs": "^0.0.1-security",
        "globals": "^16.0.0",
        "jiti": "^2.4.2",
        "jsdom": "^26.0.0",
        "nodemon": "^3.1.9",
        "npm-check-updates": "^17.1.18",
        "path": "^0.12.7",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "three": "^0.175.0",
        "tsc-alias": "^1.8.15",
        "tsx": "^4.19.3",
        "typescript": "~5.8.3",
        "typescript-eslint": "^8.29.1",
        "vite": "^6.2.6",
        "vite-plugin-dts": "^4.5.3",
        "vite-plugin-glsl": "^1.4.0",
        "vitest": "^3.1.1"
    },
    "engines": {
        "node": ">=18"
    }
}
